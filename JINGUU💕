    function confetti(){
      for(let i=0;i<120;i++){
        const s=document.createElement("span");
        s.textContent=["ðŸ’—","ðŸ’˜","ðŸ’–","ðŸ’•","âœ¨"][Math.floor(Math.random()*5)];
